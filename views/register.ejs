<%- include ('./partial/header',{title:'Registeration'}) %>
    <!-- Content here -->
     
      
        <h1> Register</h1>
        
        
        
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <div class="card p-2">
                    <%- include ('./partial/messages') %>
                    <form action="/register" method="POST">
                    <div class="mb-1 form-outline">
                        <label for="name"> User Name </label>
                        <input type="text" id="name" name="name" class="form-control form-control-sm" value="<%= typeof name != 'undefined' ? name : '' %>" required>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-1 form-outline">
                                <label for="Fname">First Name </label>
                                <input type="text" id="Fname" name="Fname" class="form-control form-control-sm" value="<%= typeof Fname != 'undefined' ? Fname : '' %>" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-1 form-outline">
                                <label for="Lname">Last Name </label>
                                <input type="text" id="Lname" name="Lname" class="form-control form-control-sm" value="<%= typeof Lname != 'undefined' ? Lname : '' %>" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-1 form-outline ">
                        <label for="email" >Email </label>
                        <input type="email" id="email" name="email" class="form-control form-control-sm" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                    </div>
                    <div class="mb-1 form-outline">
                        <label for="phone" >phone </label>
                        <input type="phone" id="phone" name="phone" class="form-control form-control-sm" value="<%= typeof phone != 'undefined' ? phone : '' %>" required>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-1 form-outline">
                                <label for="password"> Password</label>
                                <input type="password" id="password" name="password"  class="form-control form-control-sm" value="<%= typeof password != 'undefined' ? password : '' %>" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-1 form-outline">
                                <label for="password2"> Re-Password</label>
                                <input type="password" id="password2" name="password2" class="form-control form-control-sm" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
                            </div>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-dark" type="submit">Register</button>
                    </div>
                        </form>
                        <a href="/login" class="badge bg-light text-dark ">if you have an account login here</a>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
  

<!-- scripts and end of doc -->
<%- include ('./partial/footer') %>